Vagrant.configure("2") do |config|
  config.vm.box = "ubuntu/focal64"
  config.vm.hostname = "gitops-server"
  config.vm.network "forwarded_port", guest: 8080, host: 8085
  
  config.vm.provider "virtualbox" do |vb|
    vb.memory = "2048"
    vb.cpus = 2
  end
  
  config.vm.provision "shell", inline: <<-SHELL
    # Install Docker using apt (more reliable for Ubuntu Focal)
    sudo apt-get update
    sudo apt-get install -y docker.io docker-compose
    sudo systemctl start docker
    sudo systemctl enable docker
    sudo usermod -aG docker vagrant
    
    # Install Git
    sudo apt-get install -y git
    
    # Create app directory
    mkdir -p /home/vagrant/app
    chown vagrant:vagrant /home/vagrant/app
  SHELL
end
